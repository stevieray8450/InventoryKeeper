<Page
    x:Class="InventoryKeeper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InventoryKeeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black" BorderBrush="White">
        <Image x:Name="image" HorizontalAlignment="Left" Height="81" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Source="fakeLogo.png"/>
        <Border BorderThickness="1" Height="365" Margin="10,96,10,0" VerticalAlignment="Top" Background="Black" BorderBrush="White"/>
        <HyperlinkButton x:Uid="gitHubLink" HorizontalAlignment="Left" Margin="10,610,0,0" VerticalAlignment="Bottom">
            <TextBlock x:Uid="txtFooter" Height="18" Width="200" Foreground="White" FontFamily="Segoe UI Black" FontSize="11"></TextBlock>
        </HyperlinkButton>

    </Grid>
</Page>
